.author-info-container
  max-width: 800px
  margin: 0 auto
  padding: 2rem
  text-align: center
  
  .author-info
    margin-bottom: 2rem
    
    .author-avatar
      margin-bottom: 1.5rem
      
      .avatar
        width: 150px
        height: 150px
        border-radius: 50%
        object-fit: cover
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1)
    
    .author-name
      margin-bottom: 1rem
      
      h1
        font-size: 2rem
        color: #333
    
    .author-bio
      margin-bottom: 1.5rem
      
      p
        font-size: 1.1rem
        color: #666
        line-height: 1.6
    
    .blog-description
      margin-bottom: 1.5rem
      
      .blog-desc
        font-size: 1.1rem
        color: #666
        font-style: italic
    
    .author-contact
      margin-bottom: 1.5rem
      
      .contact-list
        display: flex
        justify-content: center
        flex-wrap: wrap
        
        .contact-item
          display: inline-flex
          align-items: center
          margin: 0.5rem
          padding: 0.5rem 1rem
          background: #f5f5f5
          border-radius: 20px
          color: #333
          text-decoration: none
          transition: all 0.3s ease
          
          &:hover
            background: #e0e0e0
            transform: translateY(-2px)
          
          i
            margin-right: 0.5rem
  
  .reward-container
    margin-top: 2rem
    padding-top: 2rem
    border-top: 1px solid #eee
    
    h3
      margin-bottom: 1.5rem
      font-size: 1.5rem
      color: #333
    
    .reward-methods
      display: flex
      justify-content: center
      flex-wrap: wrap
      gap: 2rem
      
      .reward-item
        text-align: center
        
        .reward-img
          width: 200px
          height: 200px
          object-fit: contain
          border: 1px solid #eee
          border-radius: 5px
          box-shadow: 0 0 5px rgba(0, 0, 0, 0.05)
          margin-bottom: 0.5rem
        
        p
          font-size: 1rem
          color: #666 